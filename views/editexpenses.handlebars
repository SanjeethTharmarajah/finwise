<!DOCTYPE html>
<html>
<head>
    <title>Budget</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script>
        var submitfrm = false;
    </script>
</head>
<body>
    <nav class="nav2">
        <div class="container2">
            <ul>
                <li><h1>Edit Expenses</h1></li>
                
            </ul>
        </div>
    </nav>
    <nav id='menu'>
    <input type='checkbox' id='responsive-menu' onclick='updatemenu()'><label></label>
    <ul>
      <li><a href='/'>Home</a></li>
      <li><a href='/dashboard'>Dashboard</a></li>
      <li><a class='dropdown-arrow' href='#'>Manage Finance</a>
        <ul class='sub-menus'>
          <li><a href='/expenses'>Expense Tracking</a></li>
          <li><a href='/budget'>Budget Management</a></li>
          <li><a href='/transactionhistory'>Transaction History</a></li>
          <li><a href='/datainsights'>Data Insights</a></li>
        </ul>
      </li>
      <li><a href='/auth/logout'>Logout</a></li>
      
    </ul>
  </nav>
    <br><br>
    <div class="rightbtn"><a href="/dashboard"><button>View Dashboard</button></a></div>
    <div class="rightbtn"><a href="/expenses"><button>Add New Expense</button></a></div>
    <br><br>
    <main>
        <center>
        {{#each expenses2}}
        <div class="container2">
            <form method="post" action="/expenses/editexpenses" class="post-form" id="frm{{id}}">
                <div class="form-group">
                    <label for="title">Category for your Expenses:</label>
                    <div class="select">
                        <select size="1" id="categories{{id}}" name="categories{{id}}">
                            <option value="1">{{category}}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="title">Amount you want to spent:</label>
                    <input type="number" step="0.01" id="amount" name="amount" value="{{amount}}" disabled>
                </div>
                <div class="form-group">
                    <label for="title">Expense Description:</label>
                    <textarea style="height:100px;" type="text" id="description" name="description" disabled>{{description}}</textarea>
                </div>
                <input type="hidden" id="selectedcategory{{id}}" name="selectedcategory{{id}}">
                <input type="hidden" id="categoryid{{id}}" name="categoryid{{id}}">
            </form>
           <button onclick="updateexpense({{id}})">Edit</button>&nbsp;&nbsp;<button onclick="deleteexpense({{id}})">Delete</button>
        </div>
        <br><hr><br>
        {{/each}}
        </center>
    </main>
    <!-- The Modal -->
    <div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close" onclick="close2()">&times;</span>
        <div id="msg"></div>
    </div>

    </div>
    <script> 
        function updateexpense(i){
            window.location.href="editexpensebyid/"+i;
        }
        function deleteexpense(i){
            window.location.href="deleteexpensebyid/"+i;
        }
    </script>
</body>
</html>
